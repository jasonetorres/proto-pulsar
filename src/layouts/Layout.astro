---
import Footer from '../components/Footer.astro';
import '../styles/globals.css';
import backgroundImage from '../assets/bg.jpg';
import { Image } from 'astro:assets';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/gingy.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Christ Cookie Recipe Finder</title>
	</head>
	<body class=" text-foreground">
		<Image 
			src={backgroundImage} 
			alt="Background" 
			class="fixed inset-0 w-full h-full object-cover -z-10 blur-sm" 
		/>
		<div class="container mx-auto px-4 pt-8 lg:px-0 max-w-screen-sm min-h-screen place-content-center">
			<slot />
			<Footer />
		</div>
	</body>
</html>
